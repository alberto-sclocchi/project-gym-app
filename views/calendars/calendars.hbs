<h1 class="subtitle">Calendars</h1>
 
{{#unless calendars}}
    <h3 class="no-header">No Calendars</h3>
{{/unless}}

{{#each calendars}}
<div id="title-div">
    <h2 class="calendar-title"><span id="span-title">{{title}}</span><button id="edit-button" style="margin-left:10px">âœŽ</button></h2>
</div>

<div id="change-title-div">
    <form class="calendar-title" id="input-calendar"data-id="{{_id}}"> 
        <input type="text" value="{{title}}">
        <button id="confirm-edit-button">Edit</button>
        <button id="cancel-edit-button">Cancel</button>
    </form>
</div>

