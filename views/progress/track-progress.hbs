<h1 class="subtitle">Track Progress</h1>

{{#unless progress}}
    <h3 class="no-header">No Progress Recorded</h3>
{{/unless}}

{{#if progress}}
    <div id="progress">
        <div class="progress-data">
            <h3>Weight</h3>
            {{#each progress}}
                <p>{{weight}} Kg</p>
            {{/each}}
        </div>

        <div class="progress-data">
            <h3>Height</h3>
            {{#each progress}}
                <p>{{height}} m</p>
            {{/each}}
        </div>

        <div class="progress-data">
            <h3>Body Fat Percentage</h3>
            {{#each progress}}
                <p>{{fatPercentage}} %</p>
            {{/each}}
        </div>

        <div class="progress-data">
            <h3>BMI</h3>
            {{#each progress}}
                <p>{{bmi}}</p>
            {{/each}}
        </div>

        <div class="progress-data">
            <h3>Category</h3>
            {{#each progress}}
                <p>{{category}}</p>
            {{/each}}
        </div>

        <div class="progress-data">
            <h3>Date</h3>
            {{#each date}}
                <p>{{this}}</p>
            {{/each}}
        </div>

        <div class="progress-data" id="delete-btns-progress">
            {{#each progress}}
                <form action="/progress/delete/{{_id}}" id="progress-delete" method="post">
                    <button>üóëÔ∏è</button>
                </form>
            {{/each}}
        </div>
    </div>
{{/if}}

<div id="add-progress">
    <a href="/progress/add">Add New Data</a>
</div>
