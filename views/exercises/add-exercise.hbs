<h1 class="subtitle">Add Exercise to Calendar</h1>

<form action="/exercises/add/{{exercise._id}}" method="post" class="form">
    <div>
        <label>Choose a Calendar:</label><br>
        <select name="calendar">
            {{#each calendars}}
                <option value="{{_id}}">{{title}}</option>
            {{/each}}
        </select>
    </div>

    <div>
        <label>Choose a day:</label><br>
        <select name="day">
            <option value="monday">Monday</option>
            <option value="tuesday">Tuesday</option>
            <option value="wednesday">Wednesday</option>
            <option value="thursday">Thursday</option>
            <option value="friday">Friday</option>
            <option value="saturday">Saturday</option>
            <option value="sunday">Sunday</option>
        </select>
    </div>

    <div>
        <label>How many sets?</label>
        <input type="number" name="setCount">
    </div>

    <div>
        <label>How many reps?</label>
        <input type="number" name="repCount">
    </div>
    
    <button type="submit">Submit</button>
</form>